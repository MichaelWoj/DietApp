<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#337357">

    <TextView
        android:id="@+id/settingPopupDescriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose"
        android:textColor="#E4E3D3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <LinearLayout
        android:id="@+id/layoutSettingsEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingPopupDescriptionTV"
        app:layout_constraintVertical_bias="0.061">

        <ImageView
            android:id="@+id/settingsPopupCancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.126"
            app:srcCompat="@drawable/ic_edit"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/settingsPopupCancelTV"
            android:layout_width="111dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:text="Edit"
            android:textColor="#E4E3D3"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="88dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSettingsDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutSettingsEdit"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/settingsPopupDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.206"
            app:srcCompat="@drawable/ic_delete"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:id="@+id/settingsPopupDeleteTV"
            android:layout_width="111dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:text="Delete"
            android:textColor="#E4E3D3"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="144dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>