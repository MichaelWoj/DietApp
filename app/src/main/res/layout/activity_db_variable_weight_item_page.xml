<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_mountain_background"
    tools:context=".FoodDBvariableWeightItemPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodInfo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-31dp">

        <TextView
            android:id="@+id/variableWeightItemAddName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@color/black"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18" />

        <TextView
            android:id="@+id/variableWeightItemCaloriesTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Calories:"
            android:textColor="@color/black"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemAddName"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableWeightItemFatTV"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:text="Fat:"
            android:textColor="@color/black"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemCaloriesTV"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableWeightItemCarbsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Carbs:"
            android:textColor="@color/black"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemFatTV"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableWeightItemProteinTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Protein:"
            android:textColor="@color/black"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemCarbsTV"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableItemWeightTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Weight"
            android:textColor="@color/black"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemProteinTV"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableWeightItemMealName"
            android:layout_width="240dp"
            android:layout_height="51dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:gravity="end"
            android:textColor="@color/black"
            app:autoSizeMaxTextSize="38sp"
            app:autoSizeMinTextSize="22sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.925"
            app:layout_constraintStart_toEndOf="@+id/variableWeightItemAddName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.179" />

        <TextView
            android:id="@+id/variableWeightItemMealCalories"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toEndOf="@+id/variableWeightItemCaloriesTV"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemMealName"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableWeightItemMealFat"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.826"
            app:layout_constraintStart_toEndOf="@+id/variableWeightItemFatTV"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemMealCalories"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableWeightItemMealCarbs"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.768"
            app:layout_constraintStart_toEndOf="@+id/variableWeightItemCarbsTV"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemMealFat"
            app:layout_constraintVertical_bias="0.002" />

        <TextView
            android:id="@+id/variableWeightItemMealProtein"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.724"
            app:layout_constraintStart_toEndOf="@+id/variableWeightItemProteinTV"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemMealCarbs"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/variableItemWeight"
            android:layout_width="60dp"
            android:layout_height="51dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="7"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.847"
            app:layout_constraintStart_toEndOf="@+id/variableItemWeightTV"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemMealProtein"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableWeightItemCaloriesGramTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="24dp"
            android:text="g"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/variableWeightItemMealCalories"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemMealName"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableWeightItemFatGramTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="24dp"
            android:text="g"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/variableWeightItemMealFat"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemMealCalories"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableWeightItemCarbsGramTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="24dp"
            android:text="g"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/variableWeightItemMealCarbs"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemMealFat"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableWeightItemProteinGramTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="24dp"
            android:text="g"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/variableWeightItemMealProtein"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemMealCarbs"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/variableItemWeightGramTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="25dp"
            android:text="g"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/variableItemWeight"
            app:layout_constraintTop_toBottomOf="@+id/variableWeightItemMealProtein"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/layoutvariableWeightItemButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.975">

            <Button
                android:id="@+id/variableWeightItemAddFood"
                android:layout_width="186dp"
                android:layout_height="62dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:text="Add Food"
                android:textColor="@color/eggshell"
                app:backgroundTint="@color/green" />

            <Button
                android:id="@+id/variableWeightItemCancel"
                android:layout_width="186dp"
                android:layout_height="62dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Cancel"
                android:textColor="@color/eggshell"
                app:backgroundTint="@color/green" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/variableWeightItemSettingsBtn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.041"
            app:srcCompat="@drawable/ic_settings" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>